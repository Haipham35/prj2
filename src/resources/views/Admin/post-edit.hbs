<div class="page-wrapper">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<h3 class="page-title">Chi tiết bài viết</h3>
			</div>
			<!--  Header -->
			<div class="col-md-12">
				<div class="job-content job-widget">

					<div class="card-body">
						<form method="post" action="/admin/post-edit/{{post._id}}?_method=PUT">
							<div class="form-group row">
								<label class="col-form-label col-md-2">Tên bài viết</label>
								<div class="col-md-10">
									<input type="text" class="form-control" value="{{post.name}}" id="name" name="name">
								</div>
							</div>

							<div class="form-group row">
								<label class="col-form-label col-md-2">Tên tác giả</label>
								<div class="col-md-10">
									<input type="text" class="form-control" value="{{post.author}}" id="author" name="author">
								</div>
							</div>
							<div class="form-group row">
								<label class="col-form-label col-md-2">Hình ảnh</label>
								<div class="col-md-10">
									<input class="form-control" type="file" value="{{post.image}}" id="image" name="image">
								</div>
							</div>
							<div class="form-group row">
								<label class="col-form-label col-md-2">Chủ đề</label>
								<div class="col-md-10">
									<select class="form-control" id="topic" name="topic">
										<option >Khoa học</option>
										<option >Công nghệ</option>
										<option >Mạng xã hội</option>
										<option >Tin tức xe hơi</option>
										<option >Y tế</option>
										<option >Góc nhìn</option>
										<option >Tips và tricks</option>
									</select>
								</div>
							</div>
							<div class="form-group row">
								<label class="col-form-label col-md-2">Mô tả</label>
								<div class="col-md-10">
									<textarea rows="10" cols="5" class="form-control" id="description"
										name="description" placeholder="Enter text here">{{post.description}}</textarea>
								</div>
							</div>
							<div class="form-group row">
								<label class="col-form-label col-md-2">Link bài viết</label>
								<div class="col-md-10">
									<input class="form-control" type="text" value="{{post.link}}" id="link" name="link">
								</div>
							</div>
							<div class="form-group mb-0 row">
								<div class="col-md-10">
									<div class="input-group">
										<div class="input-group-append">
											<button type="submit" class="btn btn-primary">Lưu lại</button>
										</div>
									</div>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>

		</div>
	</div>

</div>